<%=provide(:contact_active, 'active')%>
<div id="page-content-wrapper" class="header">
    <div class="container-fluid">
        <a href="#menu-toggle" id="menu-toggle"><i class="lnr lnr-menu"></i></a>

        <!-- map -->
        <div id="map" class="big"></div>
        <!-- / map -->

        <!-- contact info 2col -->
        <div class="contact-info">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <img src="../images/logo2.png" alt="">
                        <p> Words to keep in mind! </p>
                        <ul>
                          <li>
                              <p><strong>Programmer</strong> A person that fixes a problem you dont know you have, in a way you dont understand.</p>
                              <p>
                          </li>
                          <li>
                              <p><strong>Algorithm</strong> Word used by programmers when.. they dont want to explain what they did.</p>
                              <p>
                          </li>
                          <li>
                              <p><strong>Hardware</strong> The part of the computer that you kick.</p>
                              <p>
                          </li>
                        </ul>
                    </div>
                    <div class="col-sm-6 contacts">
                        <div class="info">
                        <p class="contact-info-title">Address</p>
                        <span class="contact-info-text">210 Fletcher St, Lowell, MA.</span>
                        </div>
                        <div class="info last">
                        <p class="contact-info-title">Email</p>
                        <a href="velez.a.daniel@me.com"  class="contact-info-text">velez.a.daniel@me.com</a>
                        </div>
                    </div>
                </div>
            </div><!-- / container -->
        </div><!-- / contact info 2col -->

        <div class="page-header">
           <h2>Contact me</h2>
        </div>
        <div id="contact" class="full-width" data-section="contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                      <%= form_tag (home_questions_path), 'data-toggle' => 'validator' do %>
                        <%= render partial: 'partials/flash_messages' %>
                          <div class="row">
                              <div class="col-md-6">
                                  <div class="form-group">
                                      <%= text_field_tag :full_name, nil, placeholder: 'Full name', class: "form-control", id: "name" %>
                                      <div class="help-block with-errors"></div>
                                  </div>
                                  <div class="form-group">
                                      <%= text_field_tag :email, nil, placeholder: 'Email', class: "form-control", id: "email" %>
                                      <div class="help-block with-errors"></div>
                                  </div>
                                  <div class="form-group">
                                      <%= text_field_tag :subject, nil, placeholder: 'Subject..', class: "form-control", id: "subject" %>
                                  </div>
                              </div>
                              <div class="col-md-6">
                                  <div class="form-group">
                                  <%= text_area_tag :message, nil, placeholder: 'message..', rows: 5, class: "form-control", id: "message" %>
                                  <div class="help-block with-errors"></div>
                                  </div>
                                  <%= submit_tag "Send massege", class: "btn btn-primary btn-md btn-form-submit" %>
                                  <div id="msgSubmit" class="h3 text-center hidden"></div>
                                  <div class="clearfix"></div>
                              </div>
                          </div>
                      <%end%>
                    </div>
                </div>
            </div><!-- / container -->
        </div><!-- / contact -->

    </div>
</div><!-- / page-content-wrapper -->
<script>
