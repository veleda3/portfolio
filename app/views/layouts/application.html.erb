     /></noscript>
     <!-- End Facebook Pixel Code -->
    <% end %>
    <title><%= @meta_title ? @meta_title : ApplicationController::BRAND_NAME %></title>
    <% if @meta_description.present? %>
     <meta name=”description” content=”<%= @meta_description %>”>
     <% end %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" />
    <%= javascript_include_tag 'application', 'bootstrap.min', 'owl.carousel.min', 'scrolling-nav', 'jquery.easing.min', 'jquery.shuffle.min', 'custom', 'jquery.countTo', 'validator.min', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', 'animate', 'font-awesome.min', 'home', 'linear-icons', 'owl.carousel', 'owl.theme', 'style', 'landing', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <link href='https://fonts.googleapis.com/css?family=Josefin+Sans:400,400italic,600,700' rel='stylesheet' type='text/css'>

    <%= yield(:head) %>
  </head>

  <body>
    <div id="wrapper">
      <%= render partial: 'partials/navbar' %>
      <%= yield %>
    </div>
    <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
    </script>

    <script type="text/javascript">
       $('.timer').countTo({
         refreshInterval: 60,
         formatter: function (value, options) {
           return value.toFixed(options.decimals);
         },
       });
    </script>

  </body>
</html>
